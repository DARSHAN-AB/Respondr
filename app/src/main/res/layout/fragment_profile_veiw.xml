<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.ProfileVeiwFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_text"
        android:text=" YOUR PROFILE"
        android:textStyle="italic"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        tools:ignore="MissingConstraints" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/iv_veiwprofile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintEnd_toEndOf="@id/profile_text"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/profile_text"
        app:layout_constraintTop_toTopOf="@id/profile_text" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/et_veiwprofile_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:hint="Enter your name"
        android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/lavendar_border"
        app:layout_constraintTop_toBottomOf="@id/iv_veiwprofile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mobile Number -->
    <TextView
        android:id="@+id/et_veiwmobile_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:hint="Enter mobile number"
        android:drawableStart="@drawable/baseline_local_phone_24"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/lavendar_border"
        app:layout_constraintTop_toBottomOf="@id/et_veiwprofile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/et_veiwprofile_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:hint="Enter your email"
        android:drawableStart="@drawable/baseline_email_24"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/lavendar_border"
        app:layout_constraintTop_toBottomOf="@id/et_veiwmobile_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Address -->
    <TextView
        android:id="@+id/et_veiwaddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter address"
        android:padding="8dp"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/lavendar_border"
        android:drawableStart="@drawable/baseline_home_24"
        app:layout_constraintTop_toBottomOf="@id/et_veiwprofile_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/et_veiwaddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
