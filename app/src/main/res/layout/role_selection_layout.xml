<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center">

    <!-- App Image (You can add your app logo or an image here) -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginBottom="20dp"
        android:contentDescription="App Logo"/>

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to our app!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Role Selection Question -->
    <TextView
        android:id="@+id/roleSelectionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your role to proceed"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Radio Group for selecting the role -->
    <RadioGroup
        android:id="@+id/roleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Radio Button for 'Public' role -->
        <RadioButton
            android:id="@+id/radioPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:textSize="16sp"
            android:padding="10dp"
            android:checked="true" />

        <!-- Radio Button for 'Responder' role -->
        <RadioButton
            android:id="@+id/radioResponder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responder"
            android:textSize="16sp"
            android:padding="10dp" />
    </RadioGroup>

</LinearLayout>
